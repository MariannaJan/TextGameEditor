#:kivy 1.10.0
#: import GameStrings gamestrings.GameStrings

<OptionsScreen>

	name: "options"
	
	MenuBoxLayout:
					
		StorylineLabel:
			text: GameStrings.optionstext
			font_size: self.height*0.4
			halign: 'center'

		MenuButton:
		    text: GameStrings.themetext
		    on_release:
		        root.changeTheme()

	    MenuButton:
	        text: GameStrings.soundtext
	        on_release:
	            root.adjustSound()

		MainMenuButton:

<ThemesPopup>

    themesPopupLayout: themes_pop

    MenuBoxLayout:
	    id: themes_pop

<SoundPopup>

    soundPopupLayout: sound_pop

    MenuBoxLayout:
        id: sound_pop

        StorylineLabel:
            text: GameStrings.soundvolumetext
            text_size: self.size
            font_size: self.height/4

<SoundVolumeSlider>
    range: 0,1
    step: 0.1









