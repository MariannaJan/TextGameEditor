#:kivy 1.10.0

<GameScreen>
	name: "gamescreen"
	referenceTextLabel: reference_text_label

	on_enter:
	    reference_text_label.changeCurrentPage()

	MainMenuButton:
		pos_hint:{'x': .8, 'y': 0}
		size_hint: .2,.2


	GridLayout:
		pos_hint: {'x': 0, 'y':0}
		size_hint: .8, .2
		cols: 2
		
		MenuBoxLayout
		
			MenuButton:
				text: "Inspect"
				on_release: root.clickInspect()

			MenuButton:
				text: "Interact"
				on_release: root.clickInteract()
					
		MenuBoxLayout
		
			MenuButton:
				text: "Inventory"
				on_release:
				    root.manager.current = "inventoryscreen"
				    root.clickInventory()
				
			MenuButton:
				text: "Interface"
				on_release: root.clickInterface()
				
	ReferenceTextLabel:
		 
		id: reference_text_label
		flag: None
		pos_hint: {'x': 0, 'y': .2}
		size_hint: .8,.8
		on_ref_press:  root.useReference(refName = args[1])
		text: self.currentPage

	MenuBoxLayout:
	    orientation: "horizontal"
		pos_hint:{'x': .8, 'y': .2}
		size_hint: .2,.8

		MenuBoxLayout:

            MenuButton:
                size_hint_y: .1
                text: "S"
            VerticalBar:

        MenuBoxLayout:

            MenuButton:
                size_hint_y: .1
                text: "E"

            VerticalBar:



		
<InspectPopup>

	referenceDescription: ref_desc
	
	MenuBoxLayout:

		StorylineLabel:
			
			id: ref_desc
			size_hint: 1,.8
	
		MenuButton:
			text: "Close"
			size_hint: 1,.2

			on_press: root.dismiss()
			
		
<InteractPopup>

	interactPopupLayout: int_pop

	MenuBoxLayout:
        id: int_pop

<InteractResultPopup>

	interactResultPopupLayout: int_r_pop

	MenuBoxLayout:
	    id: int_r_pop


<RefernceTakenPopup>

    title: ''

    MenuBoxLayout:

        CustomLabel:
            text: 'Already in the inventory!'
            font_size: self.height*.1
            halign: 'center'
	        valign: 'top'

	    MenuButton:
	        size_hint_y: .2
	        text: 'Go to Inventory'
	        on_press:
	            root.goToInventory()
	            root.dismiss()

	    MenuButton:
	        size_hint_y: .2
	        text: 'Close'
	        on_press: root.dismiss()


<UseItemInWorldPopup>

    useInWorldLayout: use_in_world_layout
    MenuBoxLayout
        id: use_in_world_layout

		
			
	
		
				
		
		
		