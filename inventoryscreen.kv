#:kivy 1.10.0
#: import GameStrings gamestrings.GameStrings

<InventoryScreen>
    name: "inventoryscreen"
    inventoryLayout: inventory_layout

    MenuBoxLayout:
        id: inventory_layout

<InventoryTitle>

    text: GameStrings.inventorytext
	halign: 'center'
	valign: 'center'
	size_hint_y: .3

<EmptyInventoryLabel>
    text: GameStrings.emptytext
    text_size: self.size
    halign: 'center'
	valign: 'center'

<InventoryCloseButton>
	size_hint_y: .2
	text: GameStrings.closetext
	on_release: app.root.children[0].current = "gamescreen"

<InventoryItemButton>

<InventoryItemPopup>
    inventoryItemLayout: inventory_item_layout

    MenuBoxLayout:
        id: inventory_item_layout

<InventoryItemPopupButton>

    size_hint_y: 0.2

<UseItemOnItemPopup>
    useItemOnItemLayout: use_item_on_item_inventory_layout

    MenuBoxLayout:
        id: use_item_on_item_inventory_layout

<UseItemOnItemResultPopup>
    useItemOnItemResultLayout: use_item_on_item_result_layout

    MenuBoxLayout:
        id: use_item_on_item_result_layout