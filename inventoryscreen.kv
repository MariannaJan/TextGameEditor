#:kivy 1.10.0

<InventoryScreen>
    name: "inventoryscreen"
    inventoryLayout: inventory_layout

    MenuBoxLayout:
        id: inventory_layout

<InventoryTitle>

    text: 'Inventory'
	halign: 'center'
	valign: 'center'
	size_hint_y: .3

<EmptyInventoryLabel>
    text: 'Empty!'
    text_size: self.size
    halign: 'center'
	valign: 'center'

<InventoryCloseButton>
	size_hint_y: .2
	text: 'Close'
	on_release: app.root.children[0].current = "gamescreen"

<InventoryItemButton>

<InventoryItemPopup>
    inventoryItemLayout: inventory_item_layout

    MenuBoxLayout:
        id: inventory_item_layout

<InventoryItemPopupButton>

    size_hint_y: 0.2

<UseItemOnItemPopup>
    useItemOnItemLayout: use_item_on_item_inventory_layout

    MenuBoxLayout:
        id: use_item_on_item_inventory_layout