#:kivy 1.10.0

<MenuButton>
	size_hint: .95,1
	pos_hint: {"center_x":.5,"y":0}
	font_size: min(self.height*0.4,self.width*0.4)
	text_size: self.size
	halign: 'center'
	valign: 'center'

<MainMenuButton>
	text: "Main Menu"
	font_size: self.height*0.2
    on_release: app.root.children[0].current = "mainmenu"

<MenuBoxLayout>
	orientation: "vertical"
	padding: 4,4,4,4
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size

<CustomLabel>

	text_size: self.size

<StorylineLabel>

	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size

	markup: True
	font_size: self.height/25
	halign: 'justify'
	valign: 'top'
	padding_x: 15
	padding_y: 30



<ActionPopup>

	size_hint: .7,.7
	auto_dismiss: False
	separator_color: 1,1,1,0
	title_size: app.root.size[1]/40

<CustomSlider>

    orientation: 'horizontal'
    cursor_height: 0
    cursor_width: 0
    value_track: True
    value_track_width: 20

<VerticalBar>
    orientation: "vertical"
    disabled: True
    range: 0,100
    value: 50
    step: 1





