#:kivy 1.10.0

<MainMenuScreen>

    name: "mainmenu"


	MenuBoxLayout:

		StorylineLabel:
			text: "Main Menu"
			font_size: self.height*0.6
			halign: 'center'
		
		MenuButton:
		    id: new_game
			text: "New Game"
			on_release:
			    app.startingPage = 'page1'
			    root.manager.current = "gamescreen"
			
		MenuButton:
			text: "Continue"
			on_release:
				app.startingPage = root.setupPageNo()
			    root.manager.current = "gamescreen"

		MenuButton:
			text: "Options"
			on_release: root.manager.current = "options"
			
		MenuButton:
			text: "Previous Attempts"
			on_release:


		MenuButton:
			text: "Quit"
			on_release: app.get_running_app().stop()

