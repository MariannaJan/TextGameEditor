#:kivy 1.10.0

<MainMenuScreen>

    name: "mainmenu"

	MenuBoxLayout:

		CustomLabel:
			text: "Main Menu"
			font_size: self.height*0.6
			halign: 'center'
		
		MenuButton:
		    id: new_game
			text: "New Game"
			on_release:
			    app.startingPage = 'page1'
			    root.newGameConfirmationPopupOpen()

		MenuButton:
			text: "Continue"
			on_release:
				app.startingPage = root.setupPageNo()
			    root.manager.current = "gamescreen"

		MenuButton:
			text: "Options"
			on_release: root.manager.current = "options"
			
		MenuButton:
			text: "Choose Story"
			on_release:

		MenuButton:
			text: "Quit"
			on_release: app.get_running_app().stop()

<NewGameConfirmationPopup>
    title: ''

    MenuBoxLayout:

        CustomLabel:
            text: 'Do you want to start a new game? All progress will be lost!!!'
            font_size: self.height*.1
            halign: 'justify'
	        valign: 'top'

        MenuBoxLayout:
            orientation: 'horizontal'
            size_hint_y: .5

            MenuButton:
                text: 'Yes'
                on_press:
                    root.startNewGame()
                    root.dismiss()
                    app.root.children[0].current = "gamescreen"
            MenuButton:
                text: 'No'
                on_press: root.dismiss()
