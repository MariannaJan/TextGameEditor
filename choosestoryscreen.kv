#:kivy 1.10.0
#: import GameStrings gamestrings.GameStrings
#: import StoriesButton customlistbuttons.StoriesButton

<ChooseStoryScreen>
    name: 'choosestoryscreen'

    MenuBoxLayout:

        CustomLabel:
            text: GameStrings.availablestoriestext
            valign: 'center'
            halign: 'center'
            size_hint_y: .2

        CustomListView:
            id: story_chooser_view
            size_hint_y: .8
            adapter:
                ListAdapter(data=root.stories,
                selection_mode='single',
                allow_empty_selection=False,
                cls=StoriesButton)

        MenuButton:
            text: GameStrings.findmorestoriestext
            font_size: 20
            size_hint_y: .1
            on_press: root.openBrowser()

        MenuButton:
            text: GameStrings.closetext
            size_hint_y: .2
            on_press: root.manager.current = "mainmenu"