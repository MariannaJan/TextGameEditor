#:kivy 1.10.0
#: import GameStrings gamestrings.GameStrings

<ChooseStoryScreen>
    name: 'choosestoryscreen'

    MenuBoxLayout:

        CustomLabel:
            text: GameStrings.availablestoriestext
            valign: 'center'
            halign: 'center'
            size_hint_y: .2

        MenuButton:
            text: 'Empathy'
            on_press: root.startStory()

        MenuButton:
            text: GameStrings.closetext
            size_hint_y: .2
            on_press: root.manager.current = "mainmenu"